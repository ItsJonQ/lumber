{% extends "base.twig" %}

{% block content %}

  <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}" itemscope itemtype="http://schema.org/WebPage">

    {# Content #}
    <header>
      <h1 itemprop="headline">
        {{post.title}}
      </h1>
    </header>

    {# Content #}
    <div itemprop="articleBody">
      {{post.content}}
    </div>

  </article>

{% endblock %}
